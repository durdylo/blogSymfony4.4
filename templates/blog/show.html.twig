{% extends 'base.html.twig' %}

{% block body %}

<article>
    <h2>{{article.title}}</h2>
    <div class="metadata">{{article.createdAt | date('d/m/Y') }} à {{article.createdAt | date('H:i') }} dans la catégorie {{ article.category.title }} </div>
    <div class="content">
        <img src="{{article.image}}" alt="">
        {{ article.content | raw }}
    </div>
</article>

<section>
<h1>{{article.comments | length}} Commentaire</h1>
{% for comment in article.comments %}
    <div class="comment">
         <div class="row">
            <div class="col-3">
            {{comment.author}} <small>{{comment.createdAt | date ('d/m/Y à H:i')}}</small>
            </div>
            <div class="col">
            {{comment.content | raw}}
             </div>
        </div>
    </div>
{% endfor %}
{{form_start(commentForm)}}
{{form_row(commentForm.author)}}
{{form_row(commentForm.content)}}
<button type="submit" class="btn btn-success">Commenter</button>
{{form_end(commentForm)}}
</section>


{% endblock %}