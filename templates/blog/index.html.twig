{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<div class="row">
    {% for article in articles %}

    <article class="col-4">
        <h2>{{ article.title }}</h2>
        <div class="metadata">{{article.createdAt | date('d/m/Y') }} Ã  {{article.createdAt | date('H:i') }} </div>
        <div class="content">
            <img src="{{article.image}}" alt="">
            {{ article.content | raw }}
            <a href="{{path('blog_show', {'id' : article.id})}}" class="btn btn-primary">lire la suite</a>
            <a href="{{path('delete_article', {'id' : article.id})}}" class="btn btn-danger">Suprimer article</a>
        </div>
    </article>
    {% endfor %}
</div>

{% endblock %}